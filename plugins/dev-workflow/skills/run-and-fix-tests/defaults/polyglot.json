{
  "outDir": "build",
  "logFile": "{outDir}/test.log",
  "build": [
    {
      "tool": "npm",
      "command": "npm run build",
      "workingDir": "frontend",
      "logFile": "{outDir}/npm.log",
      "errorPattern": "(error|Error|✘)"
    },
    {
      "tool": "maven",
      "command": "mvn clean install --quiet --log-file {outDir}/maven.log",
      "workingDir": "backend",
      "logFile": "{outDir}/maven.log",
      "errorPattern": "\\[ERROR\\]"
    }
  ],
  "test": {
    "all": {
      "command": "npm test",
      "resultsPath": "{outDir}/test-results.tap",
      "errorPattern": "(FAIL|●|Error:|Expected|Received|not ok)"
    },
    "single": {
      "command": "npm test -- {testFile}",
      "resultsPath": "{outDir}/test-single-results.tap",
      "errorPattern": "(FAIL|●|Error:|Expected|Received|not ok)"
    }
  }
}
