{
  "logDir": "dist",
  "build": {
    "command": "npm run build",
    "logFile": "{logDir}/npm-build.log",
    "errorPattern": "(error|Error|ERR!|failed)"
  },
  "test": {
    "all": {
      "command": "npm test",
      "logFile": "{logDir}/npm-test.log",
      "errorPattern": "(FAIL|●|Error:|Expected|Received)"
    },
    "single": {
      "command": "npm test -- {testFile}",
      "logFile": "{logDir}/npm-test-single.log",
      "errorPattern": "(FAIL|●|Error:|Expected|Received)"
    }
  }
}
