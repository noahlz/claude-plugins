{
  "logDir": "target/logs",
  "build": [
    {
      "command": "mvn clean install --quiet --log-file {logFile}",
      "logFile": "{logDir}/build.log",
      "errorPattern": "\\[ERROR\\]"
    }
  ],
  "test": {
    "all": {
      "command": "mvn test --quiet --log-file {logFile}",
      "logFile": "{logDir}/test.log",
      "errorPattern": "\\[ERROR\\]|Tests run:.*Failures: [1-9]"
    },
    "single": {
      "command": "mvn test --quiet -Dtest={testFile} --log-file {logFile}",
      "logFile": "{logDir}/test-single.log",
      "errorPattern": "\\[ERROR\\]"
    }
  }
}
