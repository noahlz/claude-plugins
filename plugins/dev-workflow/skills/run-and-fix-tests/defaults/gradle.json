{
  "outDir": "build",
  "logFile": "{outDir}/test.log",
  "build": [
    {
      "command": "./gradlew :api:build --quiet",
      "workingDir": ".",
      "logFile": "{outDir}/gradle-api.log",
      "errorPattern": "FAILURE|error:"
    },
    {
      "command": "./gradlew :web:build --quiet",
      "workingDir": ".",
      "logFile": "{outDir}/gradle-web.log",
      "errorPattern": "FAILURE|error:"
    }
  ],
  "test": {
    "all": {
      "command": "./gradlew test --quiet",
      "resultsPath": "{outDir}/test-results",
      "errorPattern": "FAILED|FAILURE"
    },
    "single": {
      "command": "./gradlew test --tests {testFile} --quiet",
      "resultsPath": "{outDir}/test-results",
      "errorPattern": "FAILED|FAILURE"
    }
  }
}
