{
  "outDir": "target",
  "logFile": "{outDir}/test.log",
  "build": {
    "command": "mvn clean install --quiet --log-file {outDir}/build.log",
    "logFile": "{outDir}/build.log",
    "errorPattern": "\\[ERROR\\]",
    "nativeOutputSupport": true
  },
  "test": {
    "all": {
      "command": "mvn test --quiet --log-file {outDir}/test.log",
      "resultsPath": "{outDir}/surefire-reports/TEST-*.xml",
      "errorPattern": "<failure",
      "nativeOutputSupport": true
    },
    "single": {
      "command": "mvn test --quiet -Dtest={testFile} --log-file {outDir}/test.log",
      "resultsPath": "{outDir}/surefire-reports/TEST-*.xml",
      "errorPattern": "<failure",
      "nativeOutputSupport": true
    }
  }
}
