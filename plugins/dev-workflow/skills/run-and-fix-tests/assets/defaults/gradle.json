{
  "outDir": "build",
  "logFile": "{outDir}/test.log",
  "build": {
    "command": "./gradlew build --quiet",
    "logFile": "{outDir}/gradle-build.log",
    "errorPattern": "FAILURE|error:",
    "nativeOutputSupport": false
  },
  "test": {
    "all": {
      "command": "./gradlew test --quiet",
      "resultsPath": "{outDir}/test-results/test/TEST-*.xml",
      "errorPattern": "<failure",
      "nativeOutputSupport": false
    },
    "single": {
      "command": "./gradlew test --tests {testFile} --quiet",
      "resultsPath": "{outDir}/test-results/test/TEST-*.xml",
      "errorPattern": "<failure",
      "nativeOutputSupport": false
    }
  }
}
