{
  "outDir": "dist",
  "logFile": "{outDir}/test.log",
  "build": [
    {
      "command": "vite build",
      "logFile": "{outDir}/vite.log",
      "errorPattern": "(error|Error|✘|failed)",
      "nativeOutputSupport": false
    }
  ],
  "test": {
    "all": {
      "command": "jest",
      "resultsPath": "{outDir}/jest-results.json",
      "errorPattern": "(FAIL|●|Error:|Expected|Received)",
      "nativeOutputSupport": false
    },
    "single": {
      "command": "jest {testFile}",
      "resultsPath": "{outDir}/jest-single-results.json",
      "errorPattern": "(FAIL|●|Error:|Expected|Received)",
      "nativeOutputSupport": false
    }
  }
}
