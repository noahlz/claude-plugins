{
  "outDir": "dist",
  "logFile": "{outDir}/test.log",
  "build": [
    {
      "command": "npm run build",
      "logFile": "{outDir}/npm-build.log",
      "errorPattern": "(error|Error|ERR!|failed)",
      "nativeOutputSupport": false
    }
  ],
  "test": {
    "all": {
      "command": "npm test",
      "resultsPath": "{outDir}/test-results.tap",
      "errorPattern": "(not ok|Bail out!)",
      "nativeOutputSupport": false
    },
    "single": {
      "command": "npm test -- {testFile}",
      "resultsPath": "{outDir}/test-single-results.tap",
      "errorPattern": "(not ok|Bail out!)",
      "nativeOutputSupport": false
    }
  }
}
