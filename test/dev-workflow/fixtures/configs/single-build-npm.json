{
  "outDir": "dist",
  "logFile": "dist/test.log",
  "build": [
    {
      "command": "npm run build",
      "logFile": "{outDir}/build.log",
      "errorPattern": "(error|Error|ERR!)"
    }
  ],
  "test": {
    "all": {
      "command": "npm test",
      "resultsPath": "{outDir}/test-results.tap",
      "errorPattern": "(FAIL|Error|not ok)"
    },
    "single": {
      "command": "npm test -- {testFile}",
      "resultsPath": "{outDir}/test-single-results.tap",
      "errorPattern": "(FAIL|Error|not ok)"
    }
  }
}
